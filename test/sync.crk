fun sync[s,t](xs : s*, ys : t*) : (s || t)* =
    case xs of
      nil => nil
    | x'::xs' => case ys of
                   nil => nil
                 | y'::ys' => wait x',y' do
                                {(x',y')} :: sync(xs',ys')
                              end

exec sync[Int,Int](xs = emp,ys = emp)
exec sync[Int,Int](xs = [4;5;6;7),ys = emp)
exec sync[Int,Int](xs = [4;5;6;7),ys = [1;emp))
exec sync[Int,Int](xs = [4;5;6;7),ys = [1;2;emp))